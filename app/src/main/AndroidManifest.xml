<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.megawe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EditProfil"></activity>
        <activity android:name=".DetailLowongan" />
        <activity
            android:name=".HapusActivity"
            android:theme="@style/MyLightActionBar"
            android:parentActivityName=".RekomendasiActivity"></activity>
        <activity
            android:name=".EditLowonganActivity"
            android:parentActivityName=".RekomendasiActivity"
            android:theme="@style/MyLightActionBar" />

        <activity
            android:name=".RiwayatActivity"
            android:theme="@style/MyLightActionBar"
            android:parentActivityName=".AfterLoginActivity"/>
        <activity
            android:name=".AfterLoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ProfilActivity"
            android:parentActivityName=".AfterLoginActivity"
            android:theme="@style/NoActionBar" />
            android:theme="@style/MyLightActionBar"
            android:parentActivityName=".AfterLoginActivity"/>
        <activity
            android:name=".AddPekerjaanActivity"
            android:theme="@style/MyLightActionBar"
            android:parentActivityName=".AfterLoginActivity"/>
        <activity
            android:name=".RegistrasiActivity"
            android:theme="@style/MyLightActionBar"/>
        <activity
            android:name=".AddActivity"
            android:theme="@style/MyLightActionBar"/>
        <activity
            android:name=".PesanActivity"
            android:label="@string/pesan"
            android:theme="@style/MyLightActionBar"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".RekomendasiActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>