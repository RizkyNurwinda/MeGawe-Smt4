<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".AddPekerjaanActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Lengkapi Data Berikut!"
            android:textSize="18dip"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pekerjaan"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_bidang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bidang"
            android:inputType="textPersonName"
            android:textSize="16dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_gaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gaji"
            android:inputType="number"
            android:textSize="16dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_instansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Instansi"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/alamat_instansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Instansi"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nomor_telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Telepon"
            android:inputType="number"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/persyaratan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Persyaratan"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Benefit"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <Button

            android:id="@+id/simpan_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Unggah"
            android:textAllCaps="true"
            android:background="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>

