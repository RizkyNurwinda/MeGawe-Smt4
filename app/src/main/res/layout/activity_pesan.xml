<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    tools:context=".PesanActivity">


    <View
        android:id="@+id/megawe_header"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/megawe_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="Hello, Kamu bisa mengirim Pesan Di sini"/>

     <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:onClick="onButtonTap"
        android:text="Kirim Email"
        android:layout_marginTop="30dp"
        android:background="@drawable/cutomlengkung"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="167dp" />
</LinearLayout>
