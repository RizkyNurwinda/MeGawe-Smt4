<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:weightSum="8"
    android:layout_margin="3dp"
    android:id="@+id/itemLamaran"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="2"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/fotoprofil"
            android:id="@+id/ivFotoPerusahaanLamaran"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorMain"
            android:text="Back End Developer"
            android:id="@+id/tvJudulLamaran"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:text="Rp. 7.000.000"
            android:id="@+id/tvGajiLamaran"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/tvTanggalLamaran"
            />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:text="Menunggu"
            android:id="@+id/tvStatusLamaran"
            android:layout_marginBottom="10dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:text="Terferifikasi"
            android:id="@+id/tvKeterangan"
            android:layout_marginBottom="10dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            />

    </LinearLayout>


</LinearLayout>